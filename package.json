{
  "name": "director_v2",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@orpc/arktype": "^1.13.4",
      "@orpc/client": "^1.13.4",
      "@orpc/contract": "^1.13.4",
      "@orpc/experimental-pino": "^1.13.4",
      "@orpc/json-schema": "^1.13.4",
      "@orpc/openapi": "^1.13.4",
      "@orpc/server": "^1.13.4",
      "@orpc/zod": "^1.13.4",
      "@polar-sh/better-auth": "^1.6.4",
      "@prisma/client": "^7.3.0",
      "@types/bun": "^1.3.6",
      "arkenv": "^0.9.2",
      "arkregex": "^0.0.5",
      "arktype": "^2.1.29",
      "better-auth": "^1.4.17",
      "decimal.js": "^10.6.0",
      "dotenv": "^17.2.3",
      "dotenv-expand": "^12.0.3",
      "drizzle-orm": "1.0.0-beta.11-05230d9",
      "jsonwebtoken": "^9.0.3",
      "next": "^16.1.4",
      "tsdown": "^0.20.0-beta.4",
      "typescript": "^5.9.3",
      "vitest": "^4.0.17",
      "zod": "^4.3.5"
    }
  },
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "db:generate": "turbo -F @director_v2/db db:generate",
    "db:migrate": "turbo -F @director_v2/db db:migrate",
    "db:pull": "turbo -F @director_v2/db db:pull",
    "db:studio": "turbo -F @director_v2/db db:studio",
    "dev": "turbo dev --ui stream",
    "dev:inspect": "turbo dev:inspect",
    "dev:server": "turbo -F server dev",
    "dev:web": "turbo -F web dev",
    "fmt": "oxfmt",
    "lint": "turbo lint:oxlint lint:biome lint:oxfmt",
    "lint:biome": "biome check .",
    "lint:oxfmt": "oxfmt --threads=2 --check || (echo '\n\n\nRun `bun fmt` to fix formatting issues!\n\n\n'; exit 1)",
    "lint:oxlint": "oxlint --threads=2 --type-aware --type-check --quiet",
    "openapi:generate": "turbo -F @director_v2/api openapi:generate",
    "otel:start": "cd apps/web && bun run otel:start",
    "otel:stop": "cd apps/web && bun run otel:stop",
    "prepare": "husky",
    "start": "cd apps/web && bun run start",
    "test": "BUN_SSL_VERIFY=false bun test",
    "unbuild": "rm -rf ./packages/*/dist ./apps/*/dist ./apps/*/.next",
    "update-deps": "update -i -r"
  },
  "dependencies": {
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/bun": "^1.3.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.10",
    "@typescript/native-preview": "^7.0.0-dev.20260122.2",
    "husky": "^9.1.7",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "oxlint-tsgolint": "^0.11.1",
    "tsdown": "^0.20.0-beta.4",
    "turbo": "^2.7.5"
  },
  "packageManager": "bun@1.3.2"
}

{
  "name": "director_v2",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@orpc/client": "^1.11.1",
      "@orpc/contract": "^1.11.1",
      "@orpc/json-schema": "^1.11.1",
      "@orpc/openapi": "^1.11.1",
      "@orpc/server": "^1.11.1",
      "@orpc/zod": "^1.11.1",
      "@polar-sh/better-auth": "^1.3.0",
      "@prisma/client": "^6.19.0",
      "@types/bun": "^1.3.2",
      "better-auth": "^1.3.34",
      "decimal.js": "^10.6.0",
      "dotenv": "^17.2.3",
      "jsonwebtoken": "^9.0.2",
      "next": "^16.0.1",
      "tsdown": "^0.16.1",
      "zod": "^4.1.12"
    }
  },
  "scripts": {
    "build": "turbo build",
    "check": "oxlint",
    "db:generate": "turbo -F @director_v2/db db:generate",
    "db:migrate": "turbo -F @director_v2/db db:migrate",
    "db:pull": "turbo -F @director_v2/db db:pull",
    "db:studio": "turbo -F @director_v2/db db:studio",
    "dev": "turbo dev",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "format": "biome check --write .; bun run format:sort-package-json",
    "format:sort-package-json": "bun x sort-package-json 'package.json' 'apps/web/package.json' 'packages/*/package.json'",
    "lint": "turbo run lint lint:types",
    "lint:biome": "biome check .",
    "lint:oxlint": "oxlint",
    "lint:types": "turbo run lint:types",
    "openapi:generate": "turbo -F @director_v2/api openapi:generate",
    "prepare": "husky",
    "unbuild": "rm -rf ./packages/*/dist ./apps/*/dist ./apps/*/.next",
    "update-deps": "bun ./scripts/update-catalog.ts && bun update -i"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.19.0",
    "@typescript/native-preview": "^7.0.0-dev.20251110.1",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "oxlint": "^1.28.0",
    "tsdown": "^0.16.1",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.2"
}

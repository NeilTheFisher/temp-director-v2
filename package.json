{
  "name": "director_v2",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "next": "16.0.0",
      "zod": "^4.1.12",
      "@orpc/contract": "^1.10.0",
      "@orpc/server": "^1.10.0",
      "@orpc/client": "^1.10.0",
      "@orpc/openapi": "^1.10.0",
      "@orpc/zod": "^1.10.0",
      "@prisma/client": "^6.15.0",
      "better-auth": "^1.3.28",
      "@polar-sh/better-auth": "^1.1.3",
      "decimal.js": "^10.6.0",
      "dotenv": "^17.2.2",
      "tsdown": "^0.15.5",
      "jsonwebtoken": "^9.0.2"
    }
  },
  "scripts": {
    "check": "oxlint",
    "format": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "unbuild": "rm -rf ./packages/*/dist ./apps/*/dist ./apps/*/.next",
    "lint": "turbo run -F '@director_v2/*' build && turbo run lint lint:types",
    "lint:biome": "biome check .",
    "lint:oxlint": "oxlint",
    "lint:types": "tsc --noEmit",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "db:pull": "turbo -F @director_v2/db db:pull",
    "db:studio": "turbo -F @director_v2/db db:studio",
    "db:generate": "turbo -F @director_v2/db db:generate",
    "db:migrate": "turbo -F @director_v2/db db:migrate"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^22.13.11",
    "@typescript/native-preview": "^7.0.0-dev.20251105.1",
    "concurrently": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxlint": "^1.12.0",
    "tsdown": "^0.15.5",
    "turbo": "^2.5.4",
    "typescript": "^5"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": [
      "biome check --write",
      "oxlint"
    ]
  },
  "packageManager": "bun@1.3.1"
}
